<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head') %>
    <title>Blog</title>
</head>

<body>
  <%- include('./partials/nav') %>
    <div class="container mt-4 mb-4">
      <h1>
        <%= blog.title %>
      </h1>
      <img src="<%= blog.coverImageURL %>" alt="Cover Image" width="700px">
      <p class="mt-2">
        <%= blog.body %>
      </p>
      <div class="mt-4">
        <img src="<%= blog.createdBy.profileImageURL %>" alt="Profile Image" height="50">
        <span><b>
            <%= blog.createdBy.fullName %> (Author)
          </b></span>
      </div>
      <div class="mt-4">
        <h3>Comments(<%= comments.length %>)</h3>
        <% if (locals.user) { %>
          <form method="post" action="/blog/comment/<%= blog._id %>">
            <div class="mb-3">
              <input type="text" class="form-control" id="content" name="content" placeholder="Enter your comment">
            </div>
            <button type="submit" class="btn btn-sm btn-primary">Add</button>
          </form>
          <% } %>
            <div class="mt-3">
              <% locals.comments.forEach(comment=> { %>
                <div>
                  <img src="<%= comment.createdBy.profileImageURL %>" alt="Profile Image" height="50">
                  <span>
                    <%= comment.createdBy.fullName %>
                  </span>
                  <div class="ms-5">
                    <p>
                      <%= comment.content %>
                    </p>
                  </div>
                </div>
                <% }) %>
            </div>
      </div>
    </div>
    <%- include('./partials/script') %>
</body>

</html>